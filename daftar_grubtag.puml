@startuml
mainframe **sd** DaftarTagGroup
hide footbox

actor "**: User**" as User
boundary "**: TagGroup Page**" as TagGroupManagementPage
control "**: TagGroup Controller**" as TagGroupController
entity "**: TagGroup**" as TagGroupRepository

' --- PANAH YANG DITAMBAHKAN ---
' Sesuai Rule 1, Aktor mengirim pesan ke Boundary
User -> TagGroupManagementPage : viewTagGroups()
activate TagGroupManagementPage

' Alur sisa berlanjut seperti sebelumnya
TagGroupManagementPage -> TagGroupController : loadTagGroups()
activate TagGroupController

TagGroupController -> TagGroupRepository : fetchAllTagGroups()
activate TagGroupRepository

TagGroupRepository --> TagGroupController : tagGroupList
deactivate TagGroupRepository

TagGroupController --> TagGroupManagementPage : tagGroupList
deactivate TagGroupController

alt tagGroupList is empty
    TagGroupManagementPage -> TagGroupManagementPage : displayMessage("No tag groups found")
    activate TagGroupManagementPage
    deactivate TagGroupManagementPage
else tagGroupList is not empty
    TagGroupManagementPage -> TagGroupManagementPage : displayTagGroups(tagGroupList)
    activate TagGroupManagementPage
    deactivate TagGroupManagementPage
end

deactivate TagGroupManagementPage

@enduml