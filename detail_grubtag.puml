@startuml
mainframe "**sd** DetailTagGroup"
hide footbox

actor "**: User**" as User
boundary "**: TagGroup Page**" as TagGroupDetailPage
control "**: TagGroup Controller**" as TagGroupController
entity  "**: TagGroup **" as TagGroupRepository

' User selects a tag group from UI
User -> TagGroupDetailPage : selectTagGroup(tagGroupID)
activate TagGroupDetailPage

' Page requests details from controller
TagGroupDetailPage -> TagGroupController : fetchTagGroupDetails(tagGroupID)
activate TagGroupController

' Controller asks repository for data
TagGroupController -> TagGroupRepository : findById(tagGroupID)
activate TagGroupRepository

' Repository returns data
TagGroupRepository --> TagGroupController : tagGroupData
deactivate TagGroupRepository

' Controller returns data to page
TagGroupController --> TagGroupDetailPage : tagGroupData
deactivate TagGroupController

' Page renders details to user
TagGroupDetailPage -> TagGroupDetailPage : renderDetails(tagGroupData)
activate TagGroupDetailPage
TagGroupDetailPage --> User : showDetails()
deactivate TagGroupDetailPage

@enduml
