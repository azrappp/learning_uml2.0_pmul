@startuml
mainframe **sd** CariTagGroup
hide footbox

actor "**: User**" as User
boundary "**: TagGroupPage**" as TagGroupPage
control "**: TagGroupController**" as TagGroupController
entity "**: TagGroup**" as TagGroupRepository

' === Main Flow ===
User -> TagGroupPage : searchTagGroup(keyword)
activate TagGroupPage

TagGroupPage -> TagGroupController : processSearch(keyword)
activate TagGroupController

TagGroupController -> TagGroupRepository : findByName(keyword)
activate TagGroupRepository
TagGroupRepository --> TagGroupController : tagGroupList
deactivate TagGroupRepository

TagGroupController --> TagGroupPage : tagGroupList
deactivate TagGroupController

alt no tag group found
    TagGroupPage -> TagGroupPage : displayError("No matching tag groups found")
    activate TagGroupPage
    deactivate TagGroupPage
else tag groups found
    TagGroupPage -> TagGroupPage : displaySearchResults(tagGroupList)
    activate TagGroupPage
    deactivate TagGroupPage
end

deactivate TagGroupPage
@enduml
